<% include @begin %>
	<div class="toolbar">
		<% include @logo %>

		<% include @auth %>
	</div>
	<div class="main">
		<% include @header %>
		<% include @navigation %>

		<div class="client">
			<% for (var i = 0; i < zones.length; i++) { 
				var zone = zones[i];
			%>
				<div class="panel">
					<div class="caption">
						分区：<%= zone.title %> (<%= zone.cts.toLocaleDateString()%> by <%= zone.authorName %>)
					</div>
					<table class="list">
						<thead>
							<tr> <th width=50>类型</th> <th>版块</th> <th width=100>创建</th> <th width=90 class="center">主题数</th> </tr> 
						</thead>
						<tbody>
							<% for (var j = 0; j < zone.boards.length; j++) { 
								var board = zone.boards[j];
							%>
								<tr>
									<td><%= board.type == 0 ? '分区' : '论坛' %></td>
									<td>
										<strong><a href="/forum.html?bid=<%= board.id %>"><%= board.title %></a></strong><br>
										<%= board.description %> 
									</td> 
									<td> <%= board.cts.toLocaleDateString() %> by <%= board.authorName %> </td> 
									<td class="center">
										...
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
			<% } %>
		</div>
		<script>
		
		</script>
		<% include @footer %>
	</div>
<% include @end %>